# A Gemfile
source 'https://rubygems.org'

gem 'sinatra'
gem 'sinatra-contrib'
gem 'sequel'
gem 'sqlite3'
gem 'nokogiri'

# Gems to be used only in specific environments.
group :development, :test do
  gem 'pry'
end

# Gems to only be used in the test environment.
group :test do
  gem 'json'
  gem 'guard-rspec'
  gem 'simplecov'
  gem 'rspec'
  gem 'terminal-notifier-guard'
end
